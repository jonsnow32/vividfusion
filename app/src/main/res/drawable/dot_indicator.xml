<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <!-- Selected state -->
  <item android:state_checked="true">
    <shape android:shape="oval">
      <size
        android:width="16dp"
        android:height="16dp" />
      <solid android:color="?colorControlNormal" /> <!-- Filled dot for selected -->
    </shape>
  </item>
  <!-- Unselected state -->
  <item>
    <shape android:shape="oval">
      <size
        android:width="16dp"
        android:height="16dp" />
      <stroke
        android:width="2dp"
        android:color="?colorControlNormal" /> <!-- Hollow dot for unselected -->
      <solid android:color="@android:color/transparent" />
    </shape>
  </item>
</selector>
