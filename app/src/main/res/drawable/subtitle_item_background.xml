<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_selected="true">
    <shape>
      <solid android:color="#80FFFFFF" /> <!-- Semi-transparent white when selected -->
      <corners android:radius="8dp" />
    </shape>
  </item>
  <item>
    <shape>
      <solid android:color="#40000000" /> <!-- Semi-transparent black when not selected -->
      <corners android:radius="8dp" />
    </shape>
  </item>
</selector>
