<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="8dp"
  app:cardCornerRadius="12dp"
  app:cardElevation="4dp">
  <!-- Download Type Badge -->
  <TextView
    android:id="@+id/tvDownloadType"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="top|end"
    android:background="@drawable/badge_http"
    android:paddingHorizontal="8dp"
    android:paddingVertical="2dp"
    android:text="HTTP"
    android:textColor="@android:color/white"
    android:textSize="10sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Thumbnail -->


    <!-- Title -->
    <TextView
      android:id="@+id/tvTitle"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:ellipsize="end"
      android:maxLines="2"
      android:textColor="?android:attr/textColorPrimary"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toStartOf="@id/downloadButtonWidget"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="Big Buck Bunny (2008)" />

    <!-- HTTP-specific info row -->
    <LinearLayout
      android:id="@+id/layoutHttpInfo"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="4dp"
      android:layout_marginEnd="8dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toStartOf="@id/downloadButtonWidget"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvTitle">

      <TextView
        android:id="@+id/tvConnections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp"
        tools:text="Connections: 4" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:text="•"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp" />

      <TextView
        android:id="@+id/tvResumeSupport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        tools:text="Resume: Yes" />

    </LinearLayout>

    <!-- Status -->
    <TextView
      android:id="@+id/tvStatus"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="8dp"
      android:textSize="14sp"
      app:layout_constraintEnd_toStartOf="@id/downloadButtonWidget"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/layoutHttpInfo"
      tools:text="Downloading • 45% • 250 MB / 500 MB" />

    <!-- Speed and ETA row -->
    <LinearLayout
      android:id="@+id/layoutSpeedEta"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="8dp"
      android:orientation="horizontal"
      app:layout_constraintEnd_toStartOf="@id/downloadButtonWidget"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tvStatus">

      <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp"
        tools:text="2.5 MB/s" />

      <TextView
        android:id="@+id/tvEta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp"
        tools:text="ETA: 2m 30s" />

    </LinearLayout>

    <!-- Download Action Widget with integrated progress -->
    <cloud.app.vvf.ui.download.DownloadButtonWidget
      android:id="@+id/downloadButtonWidget"
      android:layout_width="48dp"
      android:layout_height="48dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
