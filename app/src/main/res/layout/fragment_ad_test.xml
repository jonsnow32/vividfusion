<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header with padding only on sides and top -->
    <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="24dp"
      android:gravity="center"
      android:paddingStart="16dp"
      android:paddingTop="16dp"
      android:paddingEnd="16dp"
      android:text="Ad Testing Screen"
      android:textSize="24sp"
      android:textStyle="bold" />

    <!-- Banner Ad Container - Full Width -->
    <LinearLayout
      android:id="@+id/banner_ad_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:background="@android:color/darker_gray"
      android:gravity="center"
      android:orientation="vertical">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Banner Ad Space"
        android:textColor="@android:color/white" />

      <!-- AdView will be added programmatically here -->

    </LinearLayout>

    <!-- Action Buttons - Add padding back for content -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="16dp"
      android:orientation="vertical"
      android:paddingStart="16dp"
      android:paddingEnd="16dp">

      <Button
        android:id="@+id/btn_show_interstitial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Show Interstitial Ad" />

      <Button
        android:id="@+id/btn_show_rewarded"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/holo_green_dark"
        android:text="Show Rewarded Ad" />

      <Button
        android:id="@+id/btn_test_download_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:text="Test Download Complete Ad" />

      <Button
        android:id="@+id/btn_test_player_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@android:color/holo_purple"
        android:text="Test Player Exit Ad" />

    </LinearLayout>


    <!-- Test Actions Counter - Add padding back for content -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginVertical="8dp"
      android:orientation="horizontal"
      android:layout_gravity="center"
      android:gravity="center"
      android:paddingStart="16dp"
      android:paddingEnd="16dp">

      <Button
        android:id="@+id/btn_increment_action"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:text="+ Action" />

      <Button
        android:id="@+id/btn_reset_counter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:text="Reset Counter" />

    </LinearLayout>
    <!-- Ad Status Display - Add padding back for content -->
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:orientation="vertical"
      android:padding="12dp">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Ad Status:"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tv_interstitial_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Interstitial: Loading..." />

      <TextView
        android:id="@+id/tv_rewarded_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Rewarded: Loading..." />

      <TextView
        android:id="@+id/tv_banner_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Banner: Loading..." />

      <TextView
        android:id="@+id/tv_action_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Action Count: 0"
        android:textColor="@android:color/holo_red_dark" />

    </LinearLayout>


  </LinearLayout>

</androidx.core.widget.NestedScrollView>
